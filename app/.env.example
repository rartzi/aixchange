# Database Configuration
POSTGRES_USER=aixchange_user
POSTGRES_PASSWORD=change_this_password
POSTGRES_DB=aixchange_db
DATABASE_URL=postgresql://aixchange_user:change_this_password@db:5432/aixchange_db

# Next.js Configuration
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate_a_secure_secret_key_here

# Admin Configuration
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change_this_admin_password

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Resource Limits (Optional)
POSTGRES_MAX_CONNECTIONS=100

# External Images Configuration
NEXT_PUBLIC_EXTERNAL_IMAGES_URL=http://localhost:3000/external-images
EXTERNAL_IMAGES_PATH=external-images

# Docker Configuration
DOCKER_PROJECT_NAME=aixplore-portal
DOCKER_APP_PORT=3000
DOCKER_DB_PORT=5432
DOCKER_NETWORK_NAME=aixplore-network

# Volume Paths
UPLOAD_DIR=/app/uploads
BACKUP_DIR=/app/backups
NEXT_CACHE_DIR=/app/.next/cache

# DALL-E Configuration
OPENAI_API_KEY=your_openai_api_key_here
DALLE_IMAGE_SIZE=1024x1024
DALLE_IMAGE_QUALITY=standard
DALLE_IMAGE_FORMAT=png